<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relation_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#E9F3F3F3"
    android:orientation="horizontal"
    android:padding="1dp" >


    <TextView
        android:id="@+id/view_entity_relation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#DDEFF8"
        android:gravity="center"
        android:padding="5dp"
        android:text="TextView"/>

    <ImageView
        android:id="@+id/dir_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#D8E4C3"
        app:srcCompat="@android:drawable/ic_media_ff" />

    <ImageView
        android:id="@+id/dir_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#E6CEC7"
        app:srcCompat="@android:drawable/ic_media_rew"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/view_entity_relation_other"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#EBDAF1"
        android:gravity="center"
        android:padding="5dp"
        android:text="TextView"/>
</LinearLayout>