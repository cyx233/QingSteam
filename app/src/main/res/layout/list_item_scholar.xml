<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/view_list_scholar_avatar"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="150dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_alignStart="@id/view_list_scholar_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/view_list_scholar_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"/>
        <com.java.chenyuxiang.detailUI.MarqueeTextView
            android:id="@+id/view_list_scholar_data"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <TextView android:id="@+id/view_list_scholar_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"/>
        <TextView
            android:id="@+id/view_list_scholar_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>